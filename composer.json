{
  "name": "lochmueller/popup",
  "type": "typo3-cms-extension",
  "description": "Add the possibility for a easy configurable popup system for backend users and pages. Merge and modernize the old 'Popup manager' (popup_manager), 'KJ: Extended TYPO3 Links' (kj_extendedlinks), 'TypoLinkPopUp' (cc_typolinkpopup) & 'Pop-Up' (gsi_popup) Extensions and add lots of new features.",
  "autoload": {
    "psr-4": {
      "FRUIT\\Popup\\": "Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "FRUIT\\Ink\\Popup\\": "Tests"
    }
  },
  "keywords": [
    "TYPO3 CMS",
    "Popup",
    "Extbase"
  ],
  "authors": [
    {
      "name": "Tim LochmÃ¼ller",
      "email": "webmaster@fruit-lab.de",
      "role": "Developer",
      "homepage": "https://github.com/lochmueller"
    }
  ],
  "require": {
    "php": ">=5.5.0",
    "typo3/cms-core": "^6.2||^7.6||^8.7"
  },
  "replace": {
    "typo3-ter/popup": "self.version"
  },
  "homepage": "https://github.com/lochmueller/popup",
  "license": "GPL-2.0-or-later",
  "support": {
    "issues": "https://github.com/lochmueller/popup/issues"
  },
  "require-dev": {
    "namelesscoder/typo3-repository-client": "1.1.x-dev",
    "phpunit/phpunit": "~4.8.0",
    "squizlabs/php_codesniffer": "^2.6",
    "phpmd/phpmd": "^2.4",
    "scrutinizer/ocular": "^1.3.0"
  },
  "config": {
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "extra": {
    "typo3/cms": {
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/Web",
      "Package": {
        "partOfMinimalUsableSystem": true
      }
    }
  }
}
